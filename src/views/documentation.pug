html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Digiclover-x
        link(rel='stylesheet', href='./css/App.css', type='text/css')
        script(src="https://kit.fontawesome.com/f5b2afa047.js" crossorigin="anonymous") 
    body.storage
        .sidebar
            .sidebar-logo 
                a(href="/home") 
                    img(src="../assets/img/logo.png")
            
            .sidebar-menu 
                nav.sidebar-nav 
                    li.sidebar-nav__item 
                        span 문서화관리
                        i.fas.fa-chevron-up 
                    li.sidebar-nav__item 
                        span 문서 보관함
                        i.fas.fa-chevron-up 
            
            form.sidebar-btns(method="POST" action="/waitforauth" enctype="multipart/form-data")
                label.sidebar-btn(for="file-upload") 문서 업로드
                input(type="file" name="file" id="file-upload" style={display:"none"}) 
                label.sidebar-btn(for="file-submit") 제출
                input(type="submit" name="제출" id="file-submit" style={display:"none"})

            main.main
                //- 헤더 시작
                header.header 
                    h1.header-title 문서화 관리
                    input.header-search(type="text" placeholder="검색어를 입력하세요.")
                    .header-profile 
                        .header-profile__text 
                            span.header-profile__name Higgs 님
                            span.header-profile__logout-btn 로그아웃
                        img(src="../assets/img/profileA.png")
                
                hr.sidebar-horizontal-line
                //- 헤더 끝


                //- 네비게이션 시작
                nav.nav 
                    li.nav-item 
                        a(href="/waitforauth" class="nav-link nav-storage") 인증대기
                        .nav__box
                            span.nav__number 1
                    li.nav-item 
                        hr.sidebar-horizontal-line__documentation.nowpage
                        a(href="/documentation" class="nav-link nav-storage now-page") 문서화 완료
                        .nav__box
                            span.nav__number.now-page 2
                    li.nav-item 
                        a(href="/certification" class="nav-link nav-storage") 인증서 발급
                        .nav__box
                            span.nav__number 0
                //- 네비게이션 끝
                //- 위에까지 반복 요소임 모듈화 하자