html(lang="en")
    head
        include ../../includes/html-head.pug

    body.writing
        header
            //- 로고
            .logo 
                a(href="/") 
                    img(src="../assets/img/logo.png")
            h2.step-2(style={display: "none"}) 2. 자유 양식 문서 작성

        main
            //- 진행률 표시
            include ../../includes/progress-bar.pug

            form.writing-form(method="post" action="/document/finished_document" accept-charset="utf-8")
                .docu
                    .docu__title 
                        input(name="title" type="text" value=`문서 제목 입력`) 

                    .docu__describe 
                        input(name="describe" type="text" value=`${info.user1.companyName} 와(과) ${info.user2.companyName} ( ${info.user1.companyName} 책임자 : ${info.user1.contractorName}, ${info.user2.companyName} 책임자 : ${info.user2.contractorName} )`)
                    .docu__content-wrap
                        .docu__content
                            .docu__content__header
                                input(name="indx" type="text" value="제 1조")
                                img.deleteBtn(src="/assets/img/close.svg")
                            textarea(name="content") 

                        .docu__content
                            .docu__content__header
                                input(name="indx" type="text" value="제 2조") 
                                img.deleteBtn(src="/assets/img/close.svg")
                            textarea(name="content") 

                        .docu__content
                            .docu__content__header
                                input(name="indx" type="text" value="제 3조") 
                                img.deleteBtn(src="/assets/img/close.svg")
                            textarea(name="content") 

                        .docu__content
                            .docu__content__header
                                input(name="indx" type="text" value="제 4조") 
                                img.deleteBtn(src="/assets/img/close.svg")
                            textarea(name="content") 
                
                    //- 추가 버튼
                    input.button--plus(type="button" value="+")

                    //- 서명과 하단 포멧 설정 필요


                    //- 이전 페이지, 다음 페이지 이동 버튼
                    .btn--wrap
                        input.btn--link2(type="button" onclick="history.back()" value="이전")
                        input.btn--link2(type="submit" value="다음")

        script(type='text/javascript' src="../../js/progress-indicator.js")
        script(type='text/javascript' src="../../js/writing.js")