html(lang="en")
    //- 헤드 테그
    include includes/html-head.pug

    body.converting 
        //- 로고
        .nav-logo 
            a(href="/") 
                img(src="../assets/img/logo.png")
        
        //- 진행률 표시
        aside.progress-indicator
        
        h2 Select Docukind
        
        //- 선택한 회사 명과 서명자 이름 표시

        //- 원하는 문서 유형 선택
        form.select-docukind(method="POST" action="/convert/select-docukind")
            .company-contractor_wrapper
                .company1-info
                    input(name="contractorName1" type="hidden" value=companyName1) 
                    input(name="contractorName1" type="hidden" value=contractorName1) 
                    input(name="contractorPhone1" type="hidden" value=contractorPhone1) 
                    input(name="contractorEmail1" type="hidden" value=contractorEmail1) 

                .company2-info
                    input(name="companyName2" type="hidden" value=companyName2) 
                    input(name="contractorName2" type="hidden" value=contractorName2) 
                    input(name="contractorPhone2" type="hidden" value=contractorPhone2) 
                    input(name="contractorEmail2" type="hidden" value=contractorEmail2) 
            .slide_wrapper
                .slides 
                    li.slide(tabindex="1")
                        label(name="docukind") MOU계약서
                        input(type="radio" name="docukind" value="MOU계약서" style={display: "none"})
                    li.slide(tabindex="2")
                        label(name="docukind") 근로계약서
                        input(type="radio" name="docukind" value="근로계약서" style={display: "none"})
                    li.slide(tabindex="3")
                        label(name="docukind") 근로계약서
                        input(type="radio" name="docukind" value="연봉계약서" style={display: "none"})
                    li.slide(tabindex="4")
                        label(name="docukind") 도급/하도급계약서
                        input(type="radio" name="docukind" value="도급/하도급계약서" style={display: "none"})
                    li.slide(tabindex="5")
                        label(name="docukind") 구매계약서
                        input(type="radio" name="docukind" value="구매계약서" style={display: "none"})
                    li.slide(tabindex="6")
                        label(name="docukind") 보안유지서약서
                        input(type="radio" name="docukind" value="보안유지서약서" style={display: "none"})
                    li.slide(tabindex="6")
                        label(name="docukind") 재직증명서
                        input(type="radio" name="docukind" value="재직증명서" style={display: "none"})

            //- 왼쪽 오른쪽 슬라이드 버튼
            p.controls
                i(class="fas fa-chevron-left prevBtn")
                i(class="fas fa-chevron-right nextBtn")
                
            //- 이전 페이지, 다음 페이지 이동 버튼
            .moveBtns
                input(type="button" onclick="history.back()" value="이전")
                input(type="submit" value="다음")





        script(type='text/javascript' src="./js/progress-indicator.js")
        script(type='text/javascript' src="./js/slide-docukind.js")
        script(type='text/javascript' src="./js/select-docukind.js")

