html(lang="en")
    head
        include ../../includes/html-head.pug

    body.auth
        nav.nav-auth 
            .logo
                a(href="#") 
                    img(src="../assets/img/logo.png")
            .nav-link-wrap
                a(href="/recipient/login" class="nav-link") 로그인
                a(href="/recipient/signin" class="nav-link") 회원가입

        //- 회원가입 시작
        .form-wrap 
            form.signin-forms(action="/recipient/signin" method="post") 
                .form 
                    label.form__label(for="form-email__input") 이메일
                    input.form__input(type="email" name="email") 
                    label.form__label(for="form-id__input") 이름
                    input.form__input(type="text" name="name") 
                    label.form__label(for="form-phone__input") 휴대폰 번호
                    input.form__input(type="tel" name="phone") 
                    label.form__label(for="form-password__input") 비밀번호
                    input.form__input(type="password" name="password") 
                    button.form__button.normal(type="submit")
                        .form__button__item
                            i.fas.fa-envelope 
                        .form__button__item
                            span 회원가입하기
                        .form__button__item
